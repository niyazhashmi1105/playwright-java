<?xml version="1.0"?>
<!-- Removed DOCTYPE reference due to unavailability -->
<module name="Checker">
    <module name="TreeWalker">
        <!-- Naming conventions -->
        <module name="PackageName">
            <property name="format" value="^[a-z]+(\\.[a-z][a-z0-9]*)*$"/>
        </module>
        <module name="ClassName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
        <module name="FieldName">
            <property name="format" value="^[_a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Indentation -->
        <module name="Indentation">
            <property name="tabWidth" value="4"/>
            <property name="lineEnding" value="LF"/>
        </module>

        <!-- Line length -->
        <module name="LineLength">
            <property name="max" value="120"/>
            <property name="ignorePattern" value="^.*\\s*//.*$"/>
        </module>

        <!-- Javadoc -->
        <module name="JavadocType">
            <property name="scope" value="public"/>
            <property name="required" value="true"/>
        </module>
        <module name="JavadocMethod">
            <property name="scope" value="public"/>
            <property name="required" value="true"/>
        </module>

        <!-- No magic numbers -->
        <module name="MagicNumber">
            <property name="ignoreNumbers" value="0,1"/>
            <property name="max" value="5"/>
        </module>

        <!-- Braces and whitespace -->
        <module name="WhitespaceAfter">
            <property name="tokens" value="LITERAL_IF,LITERAL_ELSE,LITERAL_FOR,LITERAL_WHILE,LITERAL_SWITCH"/>
        </module>
        <module name="EmptyLineSeparator">
            <property name="file" value=".*\\.java"/>
        </module>

        <!-- Control Statements -->
        <module name="FinalLocalVariable"/>
        <module name="EmptyCatchBlock"/>
        <module name="AvoidStarImport"/>

        <!-- Others -->
        <module name="SingleLineJavadoc"/>
        <module name="MultipleStringLiterals"/>
        <module name="NoWhitespaceBefore"/>
        <module name="RedundantModifier"/>
    </module>
</module>
